overlay(as(dynamic[x,y,,], "nifti"), 
        ifelse(fit.spline$ktrans[x,y,] < 0.1, fit.spline$ktrans[x,y,], NA),
        z=7, w=11, zlim.x=c(32,512), zlim.y=c(0,0.1), plot.type="single")
dev.off()
