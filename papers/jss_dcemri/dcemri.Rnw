png(file=paste(paste(tensor, "D", sep="_"), "png", sep="."), 
    width=2*480, height=2*480)
overlay(as(dwi[,,17:20,], "nifti"),
        ifelse(fit.adc$D[,,17:20] > 0, fit.adc$D[,,17:20], NA),
        zlim.x=c(32,2515), zlim.y=c(0.0005,0.003))
dev.off()
